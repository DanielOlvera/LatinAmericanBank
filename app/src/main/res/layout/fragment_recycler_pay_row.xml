<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frpr_cardVw"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    card_view:cardCornerRadius="12dp"
    android:elevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/frpr_imageVw"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frpr_textVwName"
            android:layout_toRightOf="@+id/frpr_imageVw"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="5dp"
            android:text="name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frpr_textVwAmmount"
            android:layout_toRightOf="@+id/frpr_imageVw"
            android:textSize="25dp"
            android:textColor="@color/colorRed700"
            android:layout_marginBottom="5dp"
            android:text="ammount"
            android:layout_below="@+id/frpr_textVwName"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>

